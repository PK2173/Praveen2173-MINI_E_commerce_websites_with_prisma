<form action="/warehouse" method="POST" enctype="multipart/form-data">
    <div class="container contact">
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <img class="image-logo" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSFVTP2fH1zmjX1HQSf9oIipPK0qArjDWPbJQ&usqp=CAU" width="180px" alt="image" />
                    <h2>Buy now</h2>
                    <h4>We would love to hear from you !!!!!!!</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lname" placeholder="Enter Name On Card"
                            name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">title:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lname" placeholder="Enter Your Title"
                            name="title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">discription:</label>
                        <div class="col-sm-10">
                            <textarea type="text" class="form-control" id="lname" placeholder="Enter Your discription"
                            name="discription"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">Quntity:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lname" placeholder="Enter Your Quntity"
                            name="Quntity">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">price:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lname" placeholder="Enter Your price"
                            name="price">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="lname">image</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control" id="lname" placeholder="Enter Your image"
                            name="image">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
